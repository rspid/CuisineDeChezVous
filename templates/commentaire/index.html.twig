{% extends 'base.html.twig' %}

{% block body %}
	<h1>Commentaire index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Description</th>
				<th>DatePublication</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for commentaire in commentaires %}
				<tr>
					<td>{{ commentaire.id }}</td>
					<td>{{ commentaire.description }}</td>
					<td>{{ commentaire.datePublication ? commentaire.datePublication|date('d-m-Y') : '' }}</td>
					<td>
						<a href="{{ path('commentaire_show', {'id': commentaire.id}) }}">show</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('commentaire_new') }}">Create new</a>
{% endblock %}
